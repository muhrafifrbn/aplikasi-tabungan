<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".UangMasukActivity">

    <LinearLayout
        android:id="@+id/linearSatu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:background="@drawable/background_top"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menabung"
            android:textSize="27sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tombol Kembali"
            android:src="@drawable/icons_back_dua" />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/linearSatu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="50dp"
        android:background="@drawable/backgroud_form"
        android:layout_width="382dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_edit_text"
            android:ems="10"
            android:hint="Masukan jumlah"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#707070"
            android:textSize="18sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTambah"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            android:text="Tabung"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:layout_gravity="center"
            android:elevation="8dp"
            android:paddingHorizontal="80dp"

            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>